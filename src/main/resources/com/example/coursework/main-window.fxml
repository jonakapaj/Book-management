<AnchorPane prefHeight="530.0" prefWidth="683.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.coursework.fxControllers.MainWindow">
   <children>
      <TabPane prefHeight="530.0" prefWidth="683.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Exchange!">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="availableBookList" layoutX="14.0" layoutY="35.0" onMouseClicked="#loadPublicationInfo" prefHeight="432.0" prefWidth="222.0" />
                        <Label layoutX="14.0" layoutY="6.0" text="Available books:" />
                        <TextArea fx:id="aboutBook" layoutX="251.0" layoutY="35.0" prefHeight="168.0" prefWidth="415.0" />
                        <TreeView fx:id="commentTreeField" layoutX="252.0" layoutY="213.0" prefHeight="186.0" prefWidth="413.0" />
                        <Button layoutX="251.0" layoutY="442.0" mnemonicParsing="false" onAction="#loadReviewForm" text="Leave a review" />
                        <Button layoutX="566.0" layoutY="442.0" mnemonicParsing="false" onAction="#requestPublication" text="Request a book" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="My books">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="378.0" prefWidth="588.0">
                     <children>
                        <ListView fx:id="myPublicationListField" layoutX="14.0" layoutY="23.0" prefHeight="466.0" prefWidth="189.0" />
                        <Label layoutX="14.0" layoutY="6.0" text="My uploaded publications" />
                        <Button layoutX="227.0" layoutY="462.0" mnemonicParsing="false" onAction="#createNewPublication" text="Add new" />
                        <Button layoutX="374.0" layoutY="462.0" mnemonicParsing="false" onAction="#updatePublication" text="Update" />
                        <Button layoutX="521.0" layoutY="462.0" mnemonicParsing="false" onAction="#deletePublication" text="Delete" />
                        <TextField fx:id="publicationTitleField" layoutX="227.0" layoutY="61.0" promptText="Title" />
                        <TextArea fx:id="publicationDescriptionField" layoutX="228.0" layoutY="94.0" prefHeight="120.0" prefWidth="147.0" promptText="Description" />
                        <TextArea fx:id="authorField" layoutX="229.0" layoutY="222.0" prefHeight="81.0" prefWidth="147.0" promptText="Author list" />
                        <RadioButton fx:id="radioBook" layoutX="228.0" layoutY="24.0" mnemonicParsing="false" onAction="#disableFields" selected="true" text="Book">
                           <toggleGroup>
                              <ToggleGroup fx:id="publicationType" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="radioManga" layoutX="298.0" layoutY="24.0" mnemonicParsing="false" onAction="#disableFields" text="Manga" toggleGroup="$publicationType" />
                        <ChoiceBox fx:id="formatField" layoutX="228.0" layoutY="317.0" prefWidth="150.0" />
                        <ChoiceBox fx:id="genreField" layoutX="228.0" layoutY="357.0" prefWidth="150.0" />
                        <ChoiceBox fx:id="languageField" layoutX="228.0" layoutY="392.0" prefWidth="150.0" />
                        <TextField fx:id="publisherField" layoutX="423.0" layoutY="61.0" promptText="Publisher" />
                        <TextField fx:id="isbnField" layoutX="424.0" layoutY="94.0" promptText="ISBN" />
                        <ComboBox fx:id="mangaLanguageField" layoutX="424.0" layoutY="154.0" prefWidth="150.0" />
                        <ComboBox fx:id="mangaGenreField" layoutX="424.0" layoutY="189.0" prefWidth="150.0" />
                        <CheckBox fx:id="colorCheckbox" layoutX="424.0" layoutY="234.0" mnemonicParsing="false" text="Color" />
                        <TextField fx:id="illustratorField" layoutX="423.0" layoutY="263.0" />
                        <TextField fx:id="volumeField" layoutX="424.0" layoutY="305.0" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab text="Users">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView prefHeight="447.0" prefWidth="683.0">
                          <columns>
                            <TableColumn prefWidth="75.0" text="Id" />
                            <TableColumn prefWidth="75.0" text="Name" />
                              <TableColumn prefWidth="75.0" text="Surname" />
                              <TableColumn prefWidth="75.0" text="Column X" />
                              <TableColumn prefWidth="75.0" text="Column X" />
                          </columns>
                        </TableView>
                        <Button layoutX="289.0" layoutY="462.0" mnemonicParsing="false" onAction="#loadUserForm" text="Crate New" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
